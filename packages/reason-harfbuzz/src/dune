(library
 (name harfbuzz)
 (public_name reason-harfbuzz)
 (flags
  (:standard -w -69))
 (foreign_stubs
  (language c)
  (flags
   (:include c_flags.sexp)))
 (foreign_stubs
  (language cxx)
  (names harfbuzz)
  (flags
   (:include cxx_flags.sexp)))
 (library_flags
  (:include flags.sexp)))

(rule
 (targets c_flags.sexp cxx_flags.sexp flags.sexp)
 (deps
  (:discover config/discover.exe))
 (action
  (run %{discover})))
